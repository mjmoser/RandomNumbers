<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_vertical|center_horizontal">

    <TextView android:text="Shake to obtain lotto numbers" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvShake"
        android:textSize="26dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLotteryNumbers"
        android:layout_below="@+id/tvShake"
        android:layout_marginTop="126dp"
        android:layout_alignRight="@+id/tvShake"
        android:layout_alignEnd="@+id/tvShake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="00-00-00-00-00-00"
        android:textSize="36dp"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
